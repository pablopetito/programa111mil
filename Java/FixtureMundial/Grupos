import java.util.ArrayList;

public class Grupos {

	private ArrayList<Grupo> grupos;

	public Grupos(ArrayList<Grupo> equiposGrupo) {

		this.grupos = equiposGrupo;
	}

	ArrayList<Grupo> getGrupo() {
		return grupos;
	}
	
	public void mostrarGrupos() {
		
		System.out.println("Cantidad de Grupos: " + grupos.size());
		System.out.println();
	
		for (Grupo g : grupos) {
			System.out.println("Zona: " + g.getDenominacion());
			g.mostrarGrupo();
	
		}

	}

}
